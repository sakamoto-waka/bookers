<h1>Editing Book</h1>
<%= form_with model: @book, url:book_path(@book), method: :patch do |f|%>
 <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book', class: 'button' %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
<span> | </span>
<%= link_to 'Back', books_path %>
